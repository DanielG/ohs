cabal-version:       >=1.10

library
  hs-source-dirs:  lib/
  exposed-modules: OHS.Client
                   OHS.Server
                   OHS.Locator
                   OHS.FormSubmission
                   OHS.FormSubmission.Types
                   OHS.Cookies
                   OHS.Types
                   OHS.HXTrace
                   OHS.HTTP
                   OHS.Pipes
                   OHS.ArrowReader

  build-depends:       base >=4.6 && <4.8,
                       bytestring,
                       cereal,
                       containers,
                       aeson,
                       attoparsec,
                       either,
                       exceptions,
                       gsasl,
                       http-client,
                       http-client-tls,
                       http-types,
                       iso8601-time,
                       mtl,
                       network,
                       network-uri,
                       network-simple,
                       safecopy,
                       text,
                       time, old-locale,
                       transformers,
                       unix,
                       pipes,
                       pipes-network,
                       pipes-aeson,
                       hxt,
                       hxt-xpath,
                       safe,
                       case-insensitive,
                       parsec,
                       cookie,
                       blaze-builder,
                       data-default-class,
                       connection
  default-language:    Haskell2010

test-suite spec
  default-language:
    Haskell2010
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    tests
  main-is:
    Spec.hs
  build-depends:
      ohs,
      base,
      hspec,
      hxt

executable update-dataset
  default-language:  Haskell2010
  hs-source-dirs:    src/OHSm
  main-is:           Update.hs

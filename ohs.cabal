                       http-types,
                       network-uri,
                       hxt,
                       hxt-xpath,
                       ohs

executable ohsd
  hs-source-dirs:    src/OHSd
  main-is:           Main.hs
  -- other-extensions:
  build-depends:       base >=4.6 && <4.8,
                       bytestring,
                       cereal,
                       aeson,
                       either,
                       exceptions,
                       gsasl,
                       http-client,
                       http-client-tls,
                       http-types,
                       iso8601-time,
                       mtl,
                       network >= 2.6,
                       network-uri,
                       network-simple,
                       safecopy,
                       text,
                       time, old-locale,
                       transformers,
                       unix,
                       ohs
  default-language:    Haskell2010

executable ohs
  hs-source-dirs:    src/OHScli
  main-is:           Cli.hs
  build-depends:       base >=4.6 && <4.8,
                       http-types,
                       http-client,
                       network-uri,
                       exceptions,
                       transformers,
                       mtl,
                       unix,
                       ohs
  default-language:    Haskell2010

